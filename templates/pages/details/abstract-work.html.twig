{% extends 'pages/details/abstract-entity.html.twig' %}

{% set entity_title = entity.title %}
{% if entity.subtitle is not empty %}{% set entity_subtitle = entity.subtitle %}{% endif %}


{% block entity_attributes %}
    {# Authors #}
    {% if entity.authors is not empty %}
        <div class="attribute">
            <h4>{% if entity.authors|length > 1 %}Authors{% else %}Author{% endif %}</h4>
            {% for author in entity.authors %}
                <p><a href="{{ path('details', {id: author.id, slug: author.slug}) }}">{{ author.name }}</a></p>
            {% endfor %}
        </div>
    {% endif %}

    {# Language #}
    {% if entity.languages is not empty %}
        <div class="attribute">
            <h4>{% if entity.languages|length > 1 %}Languages{% else %}Language{% endif %}</h4>
            {% for lang in entity.languages %}
                <p>{{ lang }}</p>
            {% endfor %}
        </div>
    {% endif %}

    {# Legal Deposits #}
    {% if entity.legalDeposits is not empty %}
        <div class="attribute">
            <h4>Legal Deposits</h4>
            {% for ld in entity.legalDeposits %}
                <p>{{ ld }}</p>
            {% endfor %}
        </div>
    {% endif %}

    {# Abstract Entity attributes #}
    {{ parent() }}
{% endblock %}
