{% extends 'pages/details/abstract-entity.html.twig' %}

{% set entity_title = entity.name %}

{% block entity_attributes %}
    {# Founders #}
    {% if entity.founders is not empty %}
        <div class="attribute">
            <h4>
                {% if entity.founders|length > 1 %}
                    {% trans %}Founders{% endtrans %}
                {% else %}
                    {% trans %}Founder{% endtrans %}
                {% endif %}
            </h4>
            {% for founder in entity.founders %}
                <p><a href="{{ rosetta_entity_path(founder) }}">{{ founder.name }}</a></p>
            {% endfor %}
        </div>
    {% endif %}

    {# Foundation date #}
    {% if entity.foundationDate is not empty %}
        <div class="attribute">
            <h4>{% trans %}Foundation date{% endtrans %}</h4>
            <p>{{ rosetta_date(entity.foundationDate) }}</p>
        </div>
    {% endif %}

    {# Website #}
    {% if entity.website is not empty %}
        <div class="attribute">
            <h4>{% trans %}Website{% endtrans %}</h4>
            <p>{{ entity.website }}</p>
        </div>
    {% endif %}

    {# Abstract Entity attributes #}
    {{ parent() }}
{% endblock %}
