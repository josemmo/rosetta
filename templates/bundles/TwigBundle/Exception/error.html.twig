{% extends 'bundles/TwigBundle/Exception/base.twig' %}

{% block error_content %}
    <h1 class="mt-md-5 mb-4">{% trans %}Houston, we have a problem{% endtrans %}</h1>
    <p class="mb-0">{% trans %}Something went wrong when trying to display this page.{% endtrans %}</p>
    <p>{% trans with {'%email%': rosetta.opac.admin_email} %}Please try again later or <a href="mailto:%email%" target="_blank">send us an email</a>.{% endtrans %}</p>
{% endblock %}
