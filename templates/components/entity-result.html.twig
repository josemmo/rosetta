<div class="entity {{ entity.entityType }}">
    <a href="{{ rosetta_entity_path(entity) }}">
        <span class="cover-wrapper">
            <span class="cover"{% if entity.imageUrl is not empty %} style="background-image:url('{{ path('entity_cover', {id: entity.id}) }}')"{% endif %}></span>
        </span>
        <span class="title">
            {% if entity.title is defined %}
                {{ entity.title }}
            {% elseif entity.name is defined %}
                {{ entity.name }}
            {% endif %}
        </span>
    </a>
    {% if entity.creator is defined and entity.creator is not empty %}
        <a href="{{ rosetta_entity_path(entity.creator) }}" class="subtitle">
            {{ entity.creator.name }}
        </a>
    {% endif %}
</div>
