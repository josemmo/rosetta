<header>
    {# Top links #}
    <nav class="navbar navbar-expand-md navbar-dark top-links">
        <button class="ml-auto navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTopLinks" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="container">
            <div class="collapse navbar-collapse" id="navbarTopLinks">
                <ul class="navbar-nav"> {# TODO: add links when ready #}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('homepage') }}">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Explore catalog</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Latest adquisitions</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Trending searches</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    {# Institution leading #}
    {% set leading = '' %}
    {% if rosetta.context.leading is not empty %}
        {% set leading = ' style="background-image:url(' ~ rosetta.context.leading ~ ')"' %}
    {% endif %}
    <section class="leading"{{ leading|raw }}>
        <div class="container">
            {% include 'components/logo.html.twig' %}
        </div>
        <div class="bottom-bar">
            <div class="container">
                <div class="row">
                    <div class="col-md-7 col">
                        {% include 'components/search-bar.html.twig' %}
                    </div>
                </div>
            </div>
        </div>
    </section>
</header>
